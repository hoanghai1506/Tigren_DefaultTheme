<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
        <referenceBlock name="copyright" remove="true"/>

        <referenceContainer name="footer-container">
            <container name="footer" htmlTag="div" htmlClass="footer-top" before="-">
                <container name="footer_main.content" htmlTag="div" htmlClass="footer content">
                    <container name="footer_main.content.row" htmlTag="div" htmlClass="row">
                        <container name="footer_main.content.logo" htmlTag="div" htmlClass="footer-logo">
                            <block class="Magento\Framework\View\Element\Template" name="footer.logo" before="-"
                                   template="Magento_Theme::html/footer/logo.phtml"/>
                        </container>
                        <container name="footer_main.content.row.social" htmlTag="div" htmlClass="footer-links">
                            <block class="Magento\Framework\View\Element\Template" name="footer.links" after="-"
                                   template="Magento_Theme::html/footer/links.phtml"/>
                            <block class="Magento\Theme\Block\Html\Footer" name="copyright.custom"
                                   template="Magento_Theme::html/copyright.phtml"
                                   after="footer_main.content.row.social"/>
                        </container>
                    </container>
                </container>
            </container>
        </referenceContainer>
        <referenceContainer name="footer" remove="true"/>
    </body>
</page>
